<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/doListenItemMainLayout"
    android:layout_margin="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sl_cornerRadius="1dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#88000000"
        app:sl_shadowRadius="2dp">

        <ImageView
            android:id="@+id/listenItemImage"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:padding="2dp"
            android:paddingBottom="4dp"

            android:scaleType="fitXY"/>

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/listenItemArtistImage"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"

            android:padding="2dp"
            android:paddingBottom="4dp"
            android:background="@android:color/white"

            app:view_borderColor="@color/colorAccent"
            app:view_borderWidth="1dp"
            app:view_selectedColor="@color/colorAccentTransparent" />
    </com.dd.ShadowLayout>
</FrameLayout>