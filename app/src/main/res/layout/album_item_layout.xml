<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dd.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sl_cornerRadius="1dp"
        app:sl_dx="2dp"
        app:sl_dy="2dp"
        app:sl_shadowColor="#88000000"
        app:sl_shadowRadius="2dp">

        <FrameLayout
            android:id="@+id/normalWatchView"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/albumImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal|top"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/stopImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_remove"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal|top"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="bottom|left"
                android:layout_marginBottom="37dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"

                android:src="@drawable/ic_albums_down_unchecked" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="bottom|right"

                android:layout_marginBottom="37dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"

                android:src="@drawable/ic_albums_up_unchecked" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_gravity="top|right"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="7dp"

                android:src="@drawable/ic_album_plus_checked" />

            <TextView
                android:id="@+id/albumName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:capitalize="characters"
                android:gravity="center"
                android:singleLine="true"
                android:text="super name"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:textSize="18sp" />
        </FrameLayout>
    </com.dd.ShadowLayout>
</FrameLayout>