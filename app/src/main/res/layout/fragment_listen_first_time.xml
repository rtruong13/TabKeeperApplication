<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.i.should.what.whatshouldi.MoviesPackage.WatchFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/selectedGroups"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/selec_artist_size">
        <FrameLayout
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/layoutArtist1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alexzh.circleimageview.CircleImageView
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/selectedArtist1"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size"
                android:clickable="true"
                app:view_borderWidth="1dp"
                app:view_selectedColor="@color/colorAccentTransparent"
                app:view_borderColor="@color/colorAccent"/>
            <ImageView
                android:src="@drawable/ic_remove"
                android:visibility="gone"
                android:id="@+id/removeArtist1"
                android:layout_gravity="center"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/layoutArtist2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alexzh.circleimageview.CircleImageView
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/selectedArtist2"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size"
                android:clickable="true"
                app:view_borderWidth="1dp"
                app:view_selectedColor="@color/colorAccentTransparent"
                app:view_borderColor="@color/colorAccent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/removeArtist2"
                android:src="@drawable/ic_remove"
                android:layout_gravity="center"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/layoutArtist3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alexzh.circleimageview.CircleImageView
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/selectedArtist3"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size"
                android:clickable="true"
                app:view_borderWidth="1dp"
                app:view_selectedColor="@color/colorAccentTransparent"
                app:view_borderColor="@color/colorAccent"/>
            <ImageView
                android:src="@drawable/ic_remove"
                android:visibility="gone"
                android:id="@+id/removeArtist3"
                android:layout_gravity="center"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/layoutArtist4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alexzh.circleimageview.CircleImageView
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/selectedArtist4"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size"
                app:view_borderWidth="1dp"
                app:view_borderColor="@color/colorAccent"/>
            <ImageView
                android:src="@drawable/ic_remove"
                android:visibility="gone"
                android:id="@+id/removeArtist4"
                android:layout_gravity="center"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/layoutArtist5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.alexzh.circleimageview.CircleImageView
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/selectedArtist5"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size"
                app:view_borderWidth="1dp"
                app:view_borderColor="@color/colorAccent"/>
            <ImageView
                android:src="@drawable/ic_remove"
                android:visibility="gone"
                android:id="@+id/removeArtist5"
                android:layout_gravity="center"
                android:layout_width="@dimen/selec_artist_size"
                android:layout_height="@dimen/selec_artist_size" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingStart="35dp"
            android:hint="Enter your 5 favorite bands">

            <requestFocus />
        </EditText>

        <ImageView
            android:layout_gravity="center_vertical|left"
            android:src="@drawable/ic_search"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </FrameLayout>
    <ListView
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:background="@color/colorPrimary"
        android:id="@+id/foundArtistsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:dividerHeight="1dp"
        android:layout_weight="1"/>
</LinearLayout>
