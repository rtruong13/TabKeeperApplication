<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.i.should.what.whatshouldi.MoviesPackage.WatchFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/watchMainRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.dd.ShadowLayout
        android:id="@+id/watchTabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginStart="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginEnd="-2dp"

        app:sl_cornerRadius="1dp"
        app:sl_dx="0dp"
        app:sl_dy="0dp"
        app:sl_shadowColor="#88000000"
        app:sl_shadowRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/showMovieButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="movies" />

            <Button
                android:id="@+id/showTVShowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tvshows" />

            <Button
                android:id="@+id/showCartoonsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cartoons" />
        </LinearLayout>
    </com.dd.ShadowLayout>
</FrameLayout>
