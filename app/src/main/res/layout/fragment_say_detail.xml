<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.i.should.what.whatshouldi.SayPackage.SayDetail">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:id="@+id/phraseTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:gravity="top"
        android:layout_gravity="center_horizontal"
        android:text="to ..." />

    <TextView
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:id="@+id/phraseTopicStatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:text="you should say" />

    <TextView
        android:id="@+id/phraseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="asdffdas"
        android:textSize="28sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--todo! fucking bottom margin-->
        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"

            android:layout_marginBottom="-4dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:layout_marginStart="-4dp"

            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_shadowColor="#AA000000"
            app:sl_shadowRadius="4dp">

            <com.andexert.library.RippleView
                android:id="@+id/detailRippleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rv_centered="false"
                app:rv_color="@color/colorAccent"
                app:rv_rippleDuration="100">


                <TextView
                    android:id="@+id/bottomButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Great, Thank You!"
                    android:textAppearance="@android:style/TextAppearance.Holo.Medium" />
            </com.andexert.library.RippleView>
        </com.dd.ShadowLayout>
    </FrameLayout>
</LinearLayout>